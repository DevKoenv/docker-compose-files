ZITADEL_MASTERKEY=REPLACE_WITH_32_BYTE_MASTERKEY

# Public domain and ports
ZITADEL_EXTERNALDOMAIN=auth.example.com
ZITADEL_EXTERNALPORT=443
ZITADEL_EXTERNALSECURE=true
ZITADEL_TLS_ENABLED=false

# Postgres (external/managed) configuration
ZITADEL_DATABASE_POSTGRES_HOST=your-db-host
ZITADEL_DATABASE_POSTGRES_PORT=5432
ZITADEL_DATABASE_POSTGRES_USER_USERNAME=zitadel
ZITADEL_DATABASE_POSTGRES_USER_PASSWORD=REPLACE_DB_USER_PASSWORD
ZITADEL_DATABASE_POSTGRES_ADMIN_USERNAME=postgres
ZITADEL_DATABASE_POSTGRES_ADMIN_PASSWORD=REPLACE_DB_ADMIN_PASSWORD

# Organization / initial admin user (firstinstance)
ZITADEL_FIRSTINSTANCE_ORG_NAME=ZITADEL

ZITADEL_FIRSTINSTANCE_ORG_HUMAN_USERNAME=admin
ZITADEL_FIRSTINSTANCE_ORG_HUMAN_FIRSTNAME=ZITADEL
ZITADEL_FIRSTINSTANCE_ORG_HUMAN_LASTNAME=Admin
ZITADEL_FIRSTINSTANCE_ORG_HUMAN_EMAIL_ADDRESS=admin@example.com
ZITADEL_FIRSTINSTANCE_ORG_HUMAN_EMAIL_VERIFIED=true
ZITADEL_FIRSTINSTANCE_ORG_HUMAN_PREFERREDLANGUAGE=en
# Use a temporary password on first init and require change
ZITADEL_FIRSTINSTANCE_ORG_HUMAN_PASSWORD=TemporaryPassw0rd!
ZITADEL_FIRSTINSTANCE_ORG_HUMAN_PASSWORDCHANGEREQUIRED=true
